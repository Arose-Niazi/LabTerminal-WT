extends layout

block content
  h1 My shopping Cart
  - var total=0;
    table.table
      thead
        th(style="width: 20%") Name
        th(style="width: 20%") Price
        th(style="width: 40%") Rating
        th Actions
      tbody
        each item in cart
          - total += Number(item.price)
          tr
            td=item.name
            td Rs. 
              =item.price
            td
              if item.rating > 0
                image(width="30px",height="30px", src="/images/star-filled.png")
              else 
                image(width="30px",height="30px", src="/images/star.png")
              if item.rating > 1
                image(width="30px",height="30px", src="/images/star-filled.png")
              else 
                image(width="30px",height="30px", src="/images/star.png")
              if item.rating > 2
                image(width="30px",height="30px", src="/images/star-filled.png")
              else 
                image(width="30px",height="30px", src="/images/star.png")
              if item.rating > 3
                image(width="30px",height="30px", src="/images/star-filled.png")
              else 
                image(width="30px",height="30px", src="/images/star.png")
              if item.rating > 4
                image(width="30px",height="30px", src="/images/star-filled.png")
              else 
                image(width="30px",height="30px", src="/images/star.png")
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td 
            h3 Total
          td
            h3
              b Rs. 
                =total
